datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma-client"
}

model Project {
  id String @id @default(cuid())
  userId String
  name String
  description String?
  status String @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}